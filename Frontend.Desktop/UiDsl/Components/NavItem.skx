<box id="{id}" x="{x}" y="{y}" width="{width}" height="40" fill="{isActive ? '#DBEAFE' : '#E0F2FE'}" border="{isActive ? '#3B82F6' : '#38BDF8'}" borderWidth="{isActive ? '2' : '0'}" onClick="{onClick}">
  <text x="20" y="12" text="{text}" fontSize="16" textColor="{isActive ? '#1E40AF' : '#0369A1'}" />
</box> 